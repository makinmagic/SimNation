         /* Cabeçalho com imagem de fundo */
         .header {
            position: relative;
            height: 300px;
            background-image: url('images/city.png'); /* Adicione aqui o caminho da imagem da cidade */
            background-size: cover;
            background-position: center;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
        }
        .header-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5); /* Camada opaca preta */
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .header-title {
            font-size: 3em;
            font-weight: bold;
            z-index: 1;
            text-align: center;
        }
        /* Estilo para a visualização em cards */
        .gift-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 20px;
            margin-top: 30px;
        }
        .gift-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s ease;
            cursor: pointer;
        }
        .gift-card:hover {
            transform: scale(1.05);
        }
        .gift-card img {
            width: 100%;
            height: 150px;
            object-fit: contain;
            margin-bottom: 10px;
        }
        .gift-card h5 {
            font-size: 1.1em;
            margin-bottom: 10px;
            font-weight: bold;
        }
        /* Estilo para a visualização em cards */
        .gift-container {
